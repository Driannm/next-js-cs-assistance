// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // atau "sqlite" sesuai setup kamu
  url      = env("DATABASE_URL")
}

// 1. USER (Untuk Login Admin/Editor)
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("editor")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. PACKAGE (Master Data Paket Langganan) - BARU
model Package {
  id          String   @id @default(cuid())
  name        String   // Contoh: "Healthy Slimming", "Muscle Gain"
  duration    Int      // Total hari dalam paket (misal: 20)
  description String?  // Detail Paket
  price       Int?     // Opsional: Harga paket
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customers   Customer[] // Relasi: Satu paket bisa punya banyak pelanggan
}

// 3. CUSTOMER (Pelanggan)
model Customer {
  id             String   @id @default(cuid())
  name           String
  phone          String
  address        String
  status         String   @default("active") // active, expired, paused
  
  // -- Relasi ke Paket Langganan --
  packageId      String
  package        Package  @relation(fields: [packageId], references: [id])

  // -- Waktu Langganan --
  // usedDays dihitung manual via logic aplikasi saat order dibuat
  usedDays       Int      @default(0) 
  startDate      DateTime @default(now())
  endDate        DateTime? // Diisi otomatis oleh sistem (startDate + package.duration)

  // -- Preferensi Tambahan (BARU) --
  preferences    String?  // Contoh: "Nasi ganti kentang", "Kurangi garam"
  allergies      String?  // Contoh: "Udang", "Kacang"

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  orders         Order[]
}

// 4. MENU (Makanan)
model Menu {
  id          String   @id @default(cuid())
  name        String
  category    String   
  description String?
  image       String?
  
  // -- Nutrisi --
  calories    Int?
  protein     String?
  fat         String?
  carbs       String?
  
  // -- Detail Makanan --
  ingredients String?  // Bumbu detail (Bawang putih, garam, dll)
  composition String?  // BARU: Isi utama (Ayam, Kentang, Brokoli)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders      Order[]
}

// 5. ORDER (Pesanan Harian)
model Order {
  id          String   @id @default(cuid())
  date        DateTime
  status      String   @default("pending")
  note        String?

  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  menuId      String?
  menu        Menu?    @relation(fields: [menuId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([customerId, date]) 
}